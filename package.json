{
  "name": "@jimpick/lambda-comments",
  "version": "0.0.1",
  "description": "Blog commenting system built with AWS Lambda",
  "repository": "jimpick/lambda-comments",
  "main": "config.js",
  "scripts": {
    "create-cloudformation": "deploy/cloudformation/cloudformation.sh create",
    "update-cloudformation": "deploy/cloudformation/cloudformation.sh update",
    "delete-cloudformation": "deploy/cloudformation/cloudformation.sh delete",
    "save-cloudformation": "babel-node bin/save-cloudformation-config.js",
    "flip-lambdas-to-4.3": "babel-node bin/flip-lambdas-to-4.3.js",
    "gen-api-key": "babel-node bin/gen-api-key.js",
    "setup-apex": "babel-node bin/setup-apex.js",
    "compile-lambda": "rimraf build/apex/functions && webpack --config deploy/apex/webpack.config.js --display-exclude --display-modules --display-chunks --display-error-details --display-origins --display-cached --display-cached-assets --bail",
    "deploy-lambda": "cd build/apex && apex deploy",
    "deploy-backend": "npm run compile-lambda && npm run deploy-lambda",
    "build-frontend": "cd packages/frontend && npm run build-prod",
    "upload-script": "babel-node bin/upload-script.js",
    "deploy-frontend": "npm run build-frontend && npm run upload-script",
    "deploy": "npm run deploy-backend && npm run deploy-frontend",
    "start": "cd packages/frontend && npm start",
    "test-local": "mocha --compilers js:babel-core/register -g local",
    "test-remote": "mocha --compilers js:babel-core/register -g remote",
    "test": "mocha --compilers js:babel-core/register",
    "post-url": "babel-node bin/post-url.js http://jimpick.com/",
    "logs": "cd build/apex && apex logs -f",
    "get-client-js-url": "babel-node bin/get-client-js-url.js",
    "clean": "rimraf build && rimraf deploy/state && cd packages/frontend && npm run clean",
    "install-all": "npm install && cd packages/frontend && npm install"
  },
  "author": "Jim Pick <jim@jimpick.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "babel-polyfill": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2",
    "string-replace-webpack-plugin": "0.0.3",
    "supertest": "^1.2.0",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "@jimpick/akismet-api": "^2.0.0",
    "aws-sdk": "^2.3.5",
    "dotenv": "^2.0.0",
    "encoding": "^0.1.12",
    "jwa": "^1.1.3",
    "moment": "^2.11.2",
    "node-fetch": "^1.3.3",
    "node-noop": "^1.0.0",
    "node-slack": "0.0.7",
    "redux": "^3.4.0",
    "redux-logger": "^2.6.1",
    "slugid": "^1.1.0",
    "superagent": "^1.8.0-beta.2",
    "superagent-promise-plugin": "^2.1.0",
    "validator": "^5.2.0",
    "verror": "^1.6.1"
  }
}
